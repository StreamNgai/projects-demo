<?xml version="1.0" encoding="utf-8"?>
<dev.ngai.fantasticservice.view.MainView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:tag="mainView"
    tools:context="dev.ngai.fantasticservice.activity.MainActivity">

    <dev.ngai.fantasticservice.view.MainView
        android:id="@+id/mainView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="60dp"
        android:tag="mainView2">

        <dev.ngai.fantasticservice.view.BtnView
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="btn1"
            android:text="测试事件传递1"/>

        <dev.ngai.fantasticservice.view.BtnView
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn1"
            android:tag="btn2"
            android:text="测试事件传递2"/>
    </dev.ngai.fantasticservice.view.MainView>

    <dev.ngai.fantasticservice.view.MainView
        android:id="@+id/mainView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:background="@color/colorAccent"
        android:padding="60dp"
        android:tag="mainView3">

        <dev.ngai.fantasticservice.view.BtnView
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="btn3"
            android:text="测试事件传递3"/>

        <dev.ngai.fantasticservice.view.BtnView
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn3"
            android:tag="btn4"
            android:text="测试事件传递4"/>
    </dev.ngai.fantasticservice.view.MainView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mainView3"
        android:layout_marginStart="36dp"
        android:layout_marginTop="38dp"
        app:srcCompat="@mipmap/ic_launcher"/>

</dev.ngai.fantasticservice.view.MainView>
